@model LoginViewModel

<h2>Log in</h2>
<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <div>
            <label asp-for="IsRemember"></label><br />
            <input asp-for="IsRemember" />
        </div>
       
    </div>
    <div>
        <input class="btn-primary" type="submit" value="Log in" />
    </div>
    <br />
    <div>
        <input class="btn-primary" asp-controller="Account" asp-action="Registration" method="get" type="submit" value="Create new account" />
    </div>
</form>


